~version: "3.9"

services:
  db:
    image: postgres:16-alpine
    environment:
      POSTGRES_USER: backoffice
      POSTGRES_PASSWORD: backoffice
      POSTGRES_DB: backoffice
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U backoffice -d backoffice"]
      interval: 5s
      timeout: 5s
      retries: 10

  db_test:
    image: postgres:16-alpine
    environment:
      POSTGRES_USER: backoffice
      POSTGRES_PASSWORD: backoffice
      POSTGRES_DB: backoffice_test
    ports:
      - "5433:5432"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U backoffice -d backoffice_test"]
      interval: 5s
      timeout: 5s
      retries: 10

  app:
    build: .
    depends_on:
      db:
        condition: service_healthy
      db_test:
        condition: service_healthy
    environment:
      DATABASE_URL: postgresql://backoffice:backoffice@db:5432/backoffice
      TEST_DATABASE_URL: postgresql://backoffice:backoffice@db_test:5432/backoffice_test
      BACKOFFICE_API_KEY: dev-api-key-change-me
      UPLOAD_DIR: /app/data/uploads
      LOG_LEVEL: INFO
    ports:
      - "8000:8000"
    volumes:
      - ./data:/app/data
      - .:/app
    command: uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload

volumes:
  pgdata:
